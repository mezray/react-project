generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Tricount {
  id       Int      @id @default(autoincrement())
  name     String
  total    Float    @default(0)
  users    User[]   @relation("UserTricount")
  costs    Cost[]   @relation("TricountCosts")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String?
  email      String   @unique
  password   String
  tricounts  Tricount[]  @relation("UserTricount")
  costs      Cost[]      @relation("Debtors")
  paidCosts  Cost[]      @relation("PayerCosts")
}

model Cost {
  id         Int      @id @default(autoincrement())
  title      String
  price      Float
  tricount   Tricount @relation("TricountCosts", fields: [tricountId], references: [id])
  tricountId Int
  payer      User     @relation("PayerCosts", fields: [payerId], references: [id])
  payerId    Int
  debtors    User[]   @relation("Debtors")
}